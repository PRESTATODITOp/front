<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/resources/css/menu-instructor.css">
  <%- include('./partials/boostrap.ejs') %>
  <title>PRESTAMOS | Bandeja de entrada</title>
  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="/resources/css/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/resources/css/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/resources/css/adminlte.min.css">

  <link rel="stylesheet" href="/resources/css/menu-principal-instructor.css">
  <%- include('./partials/boostrap.ejs') %>
  <title>Menu Prestamos SENA</title>
</head>
<body class="hold-transition sidebar-mini">

  <!--Contenedor de logos-->
  <%- include('./partials/iconos.ejs') %>

  <!--Contenedor de la imagen-->
  <div class="container">
    <img src="/resources/img/logoSena.png" width="200px" class="mx-auto d-block">
  </div>

  <!-- contenedor del menu -->
  <%- include('./partials/instructor.ejs') %>

  <div class="wrapper">
    <!-- Navbar -->
    <div class="row justify-content-center mt-9"> <!-- Centrar el div row -->
      <div class="col-md-9">
        <div class="card card-success card-outline">
          <div class="card-header">
            <h3 class="card-title">PRESTAMOS</h3>
            <div class="card-tools">
              <div class="input-group input-group-sm">
                <input type="text" class="form-control" placeholder="Buscar correo">
                <div class="input-group-append">
                  <button class="btn btn-success" type="button">
                    <i class="fas fa-search"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
          <div class="card-body p-0">
            <div class="mailbox-controls">
              <button type="button" class="btn btn-default btn-sm checkbox-toggle">
                <i class="far fa-square"></i>
              </button>
              <div class="btn-group">
                <button type="button">
                <i class="far fa-trash-alt"></i>
                </button>
              </div>
            </div>
              <table class="table table-hover table-striped">
                <thead>
                  <tr class="bg-success">
                    <th>Id</th>
                    <th>Descripcion</th>
                    <th>Estado</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <% datosNoti.forEach((elemento)=>{ %>
                      <tr data-id= <%= elemento.ID_RESERVA  %>>
                        <td><%= elemento.ID_NOTI  %></td>
                        <td><%= elemento.DESCRIPCION %></td>
                        <td><%= elemento.ESTADO %></td>
                      </tr>
                    <% }); %>
                    
                  </tr>
                  
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</body>
</html>
