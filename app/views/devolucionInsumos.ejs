<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/resources/css/usuariosRegistrados.css" />
  <%- include('./partials/boostrap.ejs') %>
    <title>Usuarios registrados</title>
</head>

<body>
  <%- include('./partials/administrador.ejs') %>

    <div class="container mt-4">
      <div class="row">
        <div class="col-md-12">
          <div class="input-group mb-3">
            <input type="text" class="form-control mr-3" placeholder="Buscar usuario" id="search-input" />
            <div class="input-group-append">
              <button class="btn btn-outline-success" type="button" id="search-button">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>
          <div class="table-wrapper">
            <table class="table table-borderless" id="tabla-usuario">
              <thead>
                <tr class="bg-success">
                  <th>ID</th>
                  <th>PRODUCTO</th>
                  <th>CANTIDAD</th>
                  <th>RESPONSABLE</th>
                  <th>ESTADO</th>
                  <th>FECHA RESERVA</th>
                </tr>
              </thead>
              <tbody>
                <% datosPrestamo.forEach((prestamos, index) => { %>
                  <tr class="info">
                    <td>
                      <h4 class="info1"><%= prestamos.ID_PRESTAMOS %></h4>
                    </td>
                    <td>
                      <h4 class="info1"><%= prestamos.OBSERVACIONES %></h4>
                     </td>
                     <td> <h4 class="info1"></h4><%= prestamos.ESTADO %></h4>
                      </td><td><h4 class="info1"><%= prestamos.ID_USUARIO %></h4></td>
                     <td>
                      <% if (datosReserva[index]) { %>
                        <% const fechaPrestamo = new Date(datosReserva[index].FECHA_RES); %>
                        <h5 class="info1"><%= fechaPrestamo.toLocaleDateString() %></h5>
                      <% } else { %>
                        <h5 class="info1">-</h5> 
                      <% } %>
                    </td>
                    
                    </td>
                    <td>
                      <h5 class="info1"><%= prestamos.CANTIDAD %> <%= prestamos.MEDIDAS %></h5>
                    </td>
                    <td>
                      <h5 class="info1"> <%= prestamos.ESTADO %></h5>
                    </td>
                  
                  </tr>
                <% }); %>
                
              </tbody>

            </table>
          </div>
        </div>
      </div>
    </div>
</body>
<%- include('./partials/footer.ejs') %>
  <script src="/resources/js/usuariosRegistrados.js"></script>

</html>
